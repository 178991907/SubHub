# 核心存储（Vercel 部署必须）
DATABASE_URL=postgres://user:password@host:port/database

# Sub-Store 配置（必须）
# Sub-Store 的后端地址（通常是你的部署域名）
SUBSTORE_SHARE_BASE=https://your-substore-domain.com
# 默认同步的订阅组合名称
SUBSTORE_COLLECTION_NAME=your-collection-name
# Sub-Store 的访问令牌
SUBSTORE_TOKEN=your-share-token
# 下载超时时间（可选，默认 15000ms）
SUBSTORE_DOWNLOAD_TIMEOUT=15000

# 认证配置（强烈推荐修改）
# JWT 签名密钥（生产环境务必修改，否则每次部署后用户需重新登录）
AUTH_SECRET=change-this-to-a-32-character-secret-key
# 管理员账号（默认 admin）
ADMIN_USERNAME=admin
# 管理员密码（默认 admin）
ADMIN_PASSWORD=change-this-password

# 同步 API 保护密钥（必须修改）
# 用于保护 /api/sync 端点不被滥用
SYNC_SECRET=change-this-sync-secret
