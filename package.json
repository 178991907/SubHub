{
  "name": "substore-sync",
  "version": "1.0.0",
  "description": "Sub-Store 订阅同步平台 - 支持 Vercel Edge 和 Cloudflare Workers",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev src/index.ts --port 54530",
    "dev:vercel": "vercel dev",
    "build:worker": "esbuild src/index.ts --bundle --outfile=_worker.js --format=esm --target=es2022 --platform=browser --conditions=workerd,worker,browser --external:node:*",
    "deploy": "wrangler deploy",
    "deploy:vercel": "vercel --prod",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "hono": "^4.0.0",
    "jose": "^5.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240208.0",
    "@types/node": "^20.11.0",
    "esbuild": "^0.27.3",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0",
    "wrangler": "^3.28.0"
  }
}